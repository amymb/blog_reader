


<div class="well col-md-6 col-md-offset-3">
  <br>
  <h3> Sign In</h3>
  <br>
  <ul class = "list-unstyled">
  <li class ="text-danger"><strong><%= flash[:fun]%></strong></li>
  </ul>

  <%=form_tag sign_in_path do%>
    <div class="form-group">
      <%=label_tag :username%>
      <div>
        <%=text_field_tag :username, nil, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%=label_tag :password%>
      <div>
        <%=password_field_tag :password, nil, class: "form-control"%>
      </div>
    </div>

    <%=submit_tag "Sign In", class: "btn btn-default"%>

    <%end%>
  <p class="text-right">  <%=link_to "Sign Up", sign_up_path%> </p>
</div>
